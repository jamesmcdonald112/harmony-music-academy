---
import { Image } from "astro:assets";
import sarahPortrait from "../assets/sarah-mitchell.png";
import Layout from "../layouts/Layout.astro";
import ThankYouEffect from "@/components/shared/ThankYouEffect";
---

<Layout title="Thank you!" description="Your info pack is on the way.">
  <ThankYouEffect client:load />
  <main class="bg-background">
    <!-- Hero Section -->
    <section
      class="relative isolate overflow-hidden bg-background px-6 py-24 sm:py-32 lg:px-8"
    >
      <div class="mx-auto max-w-2xl text-center">
        <h1
          class="text-5xl font-semibold tracking-tight text-foreground duration-700 animate-in fade-in slide-in-from-bottom-4 sm:text-7xl"
        >
          Thank you!
        </h1>
        <p
          class="mx-auto mt-8 max-w-xl text-lg font-medium text-pretty text-muted-foreground delay-150 duration-700 animate-in fade-in slide-in-from-bottom-6 sm:text-xl/8"
        >
          Your info pack has been sent to your email inbox. Check your email for
          all the details about our music lessons, pricing, and next steps.
        </p>
      </div>
    </section>

    <!-- Download Link Section - Seamlessly integrated -->
    <section class="px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <p
          class="animate-fade-in mb-6 text-base font-medium text-muted-foreground delay-300 duration-500"
        >
          Didn't receive the email? No problem!
        </p>
        <a
          href="/info-pack.pdf"
          download
          class="group inline-flex items-center gap-3 rounded-[var(--radius)] bg-primary px-8 py-4 text-base font-semibold text-primary-foreground shadow-sm transition-all delay-500 duration-500 animate-in fade-in hover:-translate-y-0.5 hover:bg-primary-hover hover:shadow-md active:translate-y-0"
        >
          <svg
            class="size-5 transition-transform group-hover:scale-110"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"
            ></path>
          </svg>
          Download Info Pack
        </a>
      </div>
    </section>

    <!-- Browse Classes CTA -->
    <section class="bg-background px-6 py-24 sm:py-32 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2
          class="text-4xl font-semibold tracking-tight text-balance text-foreground sm:text-5xl"
        >
          Browse Our Classes
        </h2>
        <p
          class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-muted-foreground"
        >
          Explore our wide range of music lessons for children ages 4-18. From
          piano to guitar, violin to voice lessons, we have something for every
          young musician.
        </p>
        <div
          class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row sm:gap-x-6"
        >
          <a href="/classes" class="btn btn-primary w-auto px-6">
            Browse Classes
          </a>
          <a
            href="/"
            class="text-sm/6 font-semibold text-foreground transition-colors hover:text-primary"
          >
            Learn more <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Testimonials Section - Enhanced with animations -->
    <section
      class="border-y border-border bg-muted/30 px-6 py-32 sm:py-40 lg:px-8"
    >
      <div class="mx-auto max-w-3xl">
        <div class="mb-16 text-center">
          <h2
            class="text-4xl font-semibold tracking-tight text-foreground duration-700 animate-in fade-in slide-in-from-bottom-4 sm:text-5xl"
          >
            What Parents Say
          </h2>
        </div>
        <figure class="animate-fade-in-up delay-150 duration-700">
          <p class="sr-only">5 out of 5 stars</p>
          <div class="group flex justify-center gap-x-2 text-accent">
            <svg
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
              class="size-7 flex-none transition-all duration-300 group-hover:animate-bounce"
              style="animation-delay: 0ms;"
            >
              <path
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                clip-rule="evenodd"
                fill-rule="evenodd"></path>
            </svg>
            <svg
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
              class="size-7 flex-none transition-all duration-300 group-hover:animate-bounce"
              style="animation-delay: 50ms;"
            >
              <path
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                clip-rule="evenodd"
                fill-rule="evenodd"></path>
            </svg>
            <svg
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
              class="size-7 flex-none transition-all duration-300 group-hover:animate-bounce"
              style="animation-delay: 100ms;"
            >
              <path
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                clip-rule="evenodd"
                fill-rule="evenodd"></path>
            </svg>
            <svg
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
              class="size-7 flex-none transition-all duration-300 group-hover:animate-bounce"
              style="animation-delay: 150ms;"
            >
              <path
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                clip-rule="evenodd"
                fill-rule="evenodd"></path>
            </svg>
            <svg
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
              class="size-7 flex-none transition-all duration-300 group-hover:animate-bounce"
              style="animation-delay: 200ms;"
            >
              <path
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                clip-rule="evenodd"
                fill-rule="evenodd"></path>
            </svg>
          </div>
          <blockquote
            class="mt-12 text-2xl/9 font-semibold tracking-tight text-foreground sm:text-3xl/10"
          >
            <p>
              "Harmony Music Academy has been incredible for my daughter. The
              teachers are patient, skilled, and truly care about each student's
              progress. She's grown so much as a musician and loves going to her
              lessons every week!"
            </p>
          </blockquote>
          <figcaption class="mt-10 flex items-center gap-x-6">
            <Image
              src={sarahPortrait}
              alt="Sarah Mitchell"
              width={56}
              height={56}
              class="size-14 rounded-full bg-muted object-cover ring-2 ring-primary/20"
              loading="lazy"
            />
            <div class="text-base/6">
              <div class="font-semibold text-foreground">Sarah Mitchell</div>
              <div class="mt-0.5 text-muted-foreground">
                Parent of Emma, Age 9
              </div>
            </div>
          </figcaption>
        </figure>
      </div>
    </section>

    <!-- Contact Us Section - With accent background -->
    <section
      class="border-t border-border bg-primary/5 px-6 py-24 sm:py-32 lg:px-8"
    >
      <div class="mx-auto max-w-2xl text-center">
        <h2
          class="text-4xl font-semibold tracking-tight text-balance text-foreground duration-700 animate-in fade-in slide-in-from-bottom-4 sm:text-5xl"
        >
          Have Questions?
        </h2>
        <p
          class="animate-fade-in-up mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-muted-foreground delay-150 duration-700"
        >
          We're here to help! Get in touch with our team to learn more about our
          programs, schedule a trial lesson, or ask any questions you might
          have.
        </p>
        <div
          class="mt-10 flex flex-col items-center justify-center gap-4 delay-300 duration-700 animate-in fade-in slide-in-from-bottom-6 sm:flex-row sm:gap-x-6"
        >
          <a href="/contact" class="btn btn-primary w-auto px-6">
            Contact Us
          </a>
          <a
            href="tel:+353123456789"
            class="text-sm/6 font-semibold text-foreground transition-colors hover:text-primary"
          >
            Call us <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
